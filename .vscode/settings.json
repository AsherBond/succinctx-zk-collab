{
    "rust-analyzer.linkedProjects": [
        "./plonky2x/Cargo.toml",
    ],
    "rust-analyzer.check.overrideCommand": [
        "cargo",
        "clippy",
        "--workspace",
        "--message-format=json",
        "--all-features",
        "--all-targets",
        "--",
        "-D",
        "warnings",
        "-A",
        "incomplete-features"
    ],
    "editor.rulers": [
        100
    ],
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer", // Makes the magic
        "editor.formatOnSave": true,
        "editor.inlayHints.enabled": "offUnlessPressed"
    },
}